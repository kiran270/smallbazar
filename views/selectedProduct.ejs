#buttonImage{
  width: 100%;
}
</style>
<body>
<div class="navbar navbar-default" id="nav1">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <p class="navbar-text" align="justify">Logged in as</p> 
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" data-target="#" class="dropdown-toggle" data-toggle="dropdown"><%=un%>
            <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="col-md-4">
    <br><br><br>
    <div class="card" id="imagediv">
      <img class="image" src="<%=products[0].product_image%>">
    </div>
  </div>
  <div class="col-md-5 pull-right">
    <form Method="POST" action="/confirmOrder">
      <p id="selected_product"><b><%=products[0].product_name%><%=products[0].product_size%></b></p>
      <input type="number" class="hidden" name="user[product_id]" id="product_id" value="<%=products[0].product_id%>">
      <input type="number" class="hidden" name="user[product_op]" id="product_op" value="<%=products[0].product_op%>">
      <div class="form-group">
        <label for="pwd">Pincode:</label>
        <input type="number" class="form-control" name="user[pincode]" id="pincode" required>
      </div>
      <div class="form-group">
        <label for="pwd">Name:</label>
        <input type="text" class="form-control" name="user[username]" id="username" required>
      </div>
      <div class="form-group">
        <label for="pwd">Address:</label>
        <input type="text" class="form-control" name="user[address]" id="address" required>
      </div>
      <div class="form-group">
        <label for="pwd">Landmark/Location:</label>
        <input type="text" class="form-control" name="user[landmark]" id="landmark" required>
      </div>
      <div class="form-group">
        <label for="pwd">city:</label>
        <input type="text" class="form-control" name="user[city]" id="city" required>
      </div>
      <div class="form-group">
        <label for="pwd">phone:</label>
        <input type="text" class="form-control" name="user[phone]" id="phone" required>
      </div>
      <div class="form-group">
        <label for="pwd">Quantity:</label>
        <input type="number" class="form-control" name="user[qty]" id="qty" required>
      </div>
      <button  type="submit"class="btn btn-success" id="buttonImage">Place Order</button>
    </form>
  </div>
</body>
<script>
</script>
</html>
